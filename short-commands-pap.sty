% \img[Width]{Path}{Caption}{Label}
\newcommand{\img}[3][0.85]{
  \begin{figure}[h!]
    \centering
    \includegraphics[width = #1 \linewidth]{Versuche/\versuchsnummer/img/#2} % Automatisch im Verzecihnis der Versuchsnummer
    \caption{#3}
    \label{fig:#2}
  \end{figure}
}

% \dia[Width]{Path}{Caption}{Label}
\newcommand{\dia}[3][0.95]{
  \begin{diagramm}[h]
    \centering
    \includegraphics[width = #1 \linewidth]{Versuche/\versuchsnummer/img/#2} % Automatisch im Verzecihnis der Versuchsnummer
    \caption{#3}
    \label{dia:#2}
  \end{diagramm}
}



