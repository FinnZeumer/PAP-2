% Results \res[Exponent der 10er Potenz]{Ergebniswert}{Fehler des Ergebnisses}{Einheit}
\newcommand{\res}[4][0]{
  \begin{equation}
      \boxed{{(#2 \pm #3)}
        \ifthenelse{#1=0}{
            \,
          }{
          \cdot 10^{#1} \,
        }
        \mathrm{#4}
      }
  \end{equation}
}


